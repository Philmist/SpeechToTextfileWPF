<UserControl x:Class="SpeechToTextfileWPF.SettingControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechToTextfileWPF"
        mc:Ignorable="d"
        xmlns:properties="clr-namespace:SpeechToTextfileWPF.Properties"
        Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl TabStripPlacement="Left" Grid.Row="0">
            <TabItem Header="{x:Static properties:Resources.labelAuthentication}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
