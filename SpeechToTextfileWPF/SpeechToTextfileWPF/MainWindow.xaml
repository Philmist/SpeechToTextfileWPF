<Window x:Class="SpeechToTextfileWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpeechToTextfileWPF"
        mc:Ignorable="d"
        Title="SpeechToTextfile" SizeToContent="WidthAndHeight">
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5,2">
            <Border BorderBrush="Black" BorderThickness="1">
                <TextBlock VerticalAlignment="Center" Margin="4,0" MinWidth="150" Text="File" x:Name="FileNameText"></TextBlock>
            </Border>
            <Button VerticalAlignment="Center" Margin="4,0" Content="Select" x:Name="FileSelectButton"></Button>
        </WrapPanel>
        <WrapPanel DockPanel.Dock="Top" Margin="5,2" Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Margin="4,0" Text="{Binding ElementName=RefreshSecondSlider, Path=Value}" x:Name="RefreshSecondText" MinWidth="20"></TextBlock>
            <Slider x:Name="RefreshSecondSlider" VerticalAlignment="Center" Maximum="30" Minimum="0" AutoToolTipPlacement="TopLeft" LargeChange="10" SmallChange="1" TickPlacement="Both" MinWidth="200" Width="auto" TickFrequency="5"></Slider>
        </WrapPanel>
        <DockPanel Margin="5,2">
            <Border BorderThickness="1" BorderBrush="Black" DockPanel.Dock="Top" Margin="0,4">
                <TextBlock MinWidth="150" Width="auto" x:Name="RecognizeText"></TextBlock>
            </Border>
            <Button DockPanel.Dock="Bottom" MaxWidth="100" Content="Recognize" x:Name="RecognizeButton" Click="RecognizeButton_Click"></Button>
        </DockPanel>
    </DockPanel>
</Window>
